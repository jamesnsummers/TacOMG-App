<div class="container text-center">
<div class="row">
  <h2><b>create your breakfast taco</b></h2>
</div>
</div>
<fieldset>
  <form method="POST" action="/tacos">
    <div class="container text-center center-block">
      <div class="row">
        <div class="col-md-6"><p><b>tortilla</b></p></div>
        <div class="col-md-6 btn-group">
          <button name="tortilla" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> tortilla type <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a href="#">flour</a></li>
              <li><a href="#">corn</a></li>
              <li><a href="#">wheat</a></li>
            </ul>
        </div>
      </div>
    </div>
    <div class="container text-center center-block"><hr></div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 text-center"><p><b>eggs</b></p></div>
        <div class="col-md-6 btn-group">
          <label class="switch">
            <input name="eggs" type="checkbox" id="eggs">
            <div class="slider round" id="eggs-slider"></div>
          </label>
        </div>
      </div>
    </div>
    <div class="container text-center center-block"><hr></div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 text-center"><p><b>protein</b></p></div>
        <div class="col-md-6 btn-group">
          <button name="meat" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">protein type<span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="#">bacon</a></li>
              <li><a href="#">chorizo</a></li>
              <li><a href="#">sausage</a></li>
              <li><a href="#">soyrizo</a></li>
            </ul>
        </div>
      </div>
    </div>
    <div class="container text-center center-block"><hr></div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 text-center"><p><b>potatoes</b></p></div>
        <div class="col-md-6 btn-group">
          <label class="switch">
            <input name="potato" type="checkbox" id="potatoes">
            <div class="slider round" id="potatoes-slider"></div>
          </label>
        </div>
      </div>
    </div>
    <div class="container text-center center-block"><hr></div>
    <div class="container text-center center-block">
      <div class="row">
        <div class="col-md-6"><p><b>beans</b></p></div>
        <div class="col-md-6 btn-group">
          <button name="beans" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> bean type <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a href="#">pinto</a></li>
              <li><a href="#">black</a></li>
              <li><a href="#">refried</a></li>
            </ul>
        </div>
      </div>
    </div>
    <div class="container text-center center-block"><hr></div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 text-center"><p><b>cheese</b></p></div>
        <div class="col-md-6 btn-group">
          <label class="switch">
            <input name="cheese" type="checkbox" id="cheese">
            <div class="slider round" id="cheese-slider"></div>
          </label>
        </div>
      </div>
    </div>
    <div class="container text-center center-block"><hr></div>
    <div class="container">
      <div class="row">
        <div class="col-md-6 text-center"><p><b>salsa</b></p></div>
        <div class="col-md-6 btn-group">
          <label class="switch">
            <input name="salsa" type="checkbox" id="salsa">
            <div class="slider round" id="salsa-slider"></div>
          </label>
        </div>
      </div>
    </div>
    <div class="container text-center">
      <input class="btn btn-primary" type="submit" value="submit taco!">
    </div>
  </form>
</fieldset>

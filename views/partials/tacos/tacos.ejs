<!-- HTML/.ejs for the taco gallery -->
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>tacOMG</title>
	<link rel="stylesheet" type="text/css" href="stylesheets/main.css" />
</head>
	<link href="https://fonts.googleapis.com/css?family=Cabin:400,700|Chango|Chelsea+Market|Knewave|Luckiest+Guy|Monoton|Press+Start+2P" rel="stylesheet">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="../stylesheets/main.css" rel="stylesheet">
	<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js" charset="utf-8"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" charset="utf-8"></script>
</head>
<body id="taco-gallery">
	<header>
		<nav class="navbar navbar-default">
			<div class="container-fluid" id="navbar">
				<img id="logo" src="../images/newtaco.png" title="taco-logo" />
				<a class="navbar-brand" href="/" id="navbar-brand">tacOMG</a>
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav navbar-right" id="nav-gal-right">
            <% if(user != undefined){ %>
            <li id="greet-user">hello, <%= user.fb.firstName %></li>
						<li><a href="/" id="log-out">create a taco</a></li>
						<li><a href="/logout" id="log-out">log out</a></li>
            <% }  %>
          </ul>
				</div>
			</div>
		</nav>
	</header>
    <% for(var i=0; i< tacos.length; i++) {  %>
			<div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 card">
          <nav class="navbar navbar-default text-center" id="name-bar">
            <h4 class="card-title" id="chef-title"><b><%= chefs[i].firstName %>'s Taco</b></h4>
          </nav>
          <div class="card-body">
            <img id="gal-thumbnail" src="../images/taco_ex.png" title="taco-example" />
            <ul class="card-text">
							<li><b>Tortilla : </b> <%= tacos[i].tortilla %></li>
							<li><b>Eggs : </b> <%= tacos[i].eggs %></li>
							<li><b>Meat : </b> <%= tacos[i].meat %></li>
							<li><b>Salsa : </b> <%= tacos[i].salsa %></li>
							<li><b>Cheese : </b> <%= tacos[i].cheese %></li>
							<li><b>Beans : </b> <%= tacos[i].beans %></li>
							<li><b>Potato : </b> <%= tacos[i].potato %></li>
						</ul>
						<ul id="voting">
	          	<li id="votes">total vote(s): <%= tacos[i].votes %></li>
							<li class="count"></li>
							<a href="/votes/<%=tacos[i]._id %>" class="buttonPlus btn btn-primary"><b>vote</b></a>
						</ul>
          </div>
        </div>
    <% } %>
<script src="scripts/app.js"></script>
</body>
<footer>
	<div class="container text-center">
		<a id="github" href="https://github.com/jamesnsummers/project-01"><h5>check out our project on GitHub<i class="fa fa-github" aria-hidden="true"></i></h5></a>
	</div>
</footer>
